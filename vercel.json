{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "/api/webhook"
    },
    {
      "src": "/health",
      "dest": "/api/health.js",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "/api/redirect.js"
    },
    {
      "src": "/api/webhook",
      "methods": ["POST"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["sin1"],
  "github": {
    "silent": true,
    "autoAlias": true
  }
}